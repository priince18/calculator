<Window x:Class="calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Viewbox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
         HorizontalAlignment="Right" VerticalAlignment="Bottom"
         Stretch="Uniform">
            <Label x:Name="dspl" 
           Content="0"
           FontSize="70"
           HorizontalAlignment="Right"
           VerticalAlignment="Bottom"/>
        </Viewbox>
        <Button Content="AC"
                Name="ACbtn"
                
                FontSize="30"
                Margin="7"
                Grid.Column="0"
                Grid.Row="1"/>
        <Button Content="+/-"
                Name="NEGbtn"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontSize="30"
                Margin="7"
                Grid.Column="1"
                Grid.Row="1"/>
        <Button Content="%"
                Name="PERCbtn"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        FontSize="30"
        Margin="7"
        Grid.Column="2"
        Grid.Row="1"/>
        <Button Content="/"
                Click="Operator_Click"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        FontSize="30"
        Margin="5"
        Grid.Column="3"
        Grid.Row="1"/>
        <Button Content="*"
                Click="Operator_Click"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        FontSize="30"
        Margin="5"
        Grid.Column="3"
        Grid.Row="2"/>
        <Button Content="+"
                Click="Operator_Click"
HorizontalAlignment="Stretch"
VerticalAlignment="Stretch"
FontSize="30"
Margin="5"
Grid.Column="3"
Grid.Row="3"/>
        <Button Content="-"
                Click="Operator_Click"
HorizontalAlignment="Stretch"
VerticalAlignment="Stretch"
FontSize="30"
Margin="5"
Grid.Column="3"
Grid.Row="4"/>
        <Button Content="="
                Name="EQbtn"
HorizontalAlignment="Stretch"
VerticalAlignment="Stretch"
FontSize="30"
Margin="5"
Grid.Column="3"
Grid.Row="5"/>
        <!--Numbers -->
        <Button Content="9"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontSize="30"
                Margin="5"
                Grid.Column="2"
                Grid.Row="2"
                Click="NumBtn_Click"/>
        <Button Content="8"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        FontSize="30"
        Margin="5"
        Grid.Column="1"
        Grid.Row="2"
                Click="NumBtn_Click"/>
        <Button Content="7"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        FontSize="30"
        Margin="5"
        Grid.Column="0"
        Grid.Row="2"
                Click="NumBtn_Click"/>
        <Button Content="6"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        FontSize="30"
        Margin="5"
        Grid.Column="2"
        Grid.Row="3"
                Click="NumBtn_Click"/>
        <Button Content="5"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        FontSize="30"
        Margin="5"
        Grid.Column="1"
        Grid.Row="3"
                Click="NumBtn_Click"/>
        <Button Content="4"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        FontSize="30"
        Margin="5"
        Grid.Column="0"
        Grid.Row="3"
                Click="NumBtn_Click"/>
        <Button Content="1"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        FontSize="30"
        Margin="5"
        Grid.Column="0"
        Grid.Row="4"
                Click="NumBtn_Click"/>
        <Button Content="2"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        FontSize="30"
        Margin="5"
        Grid.Column="1"
        Grid.Row="4"
                Click="NumBtn_Click"/>
        <Button Content="3"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        FontSize="30"
        Margin="5"
        Grid.Column="2"
        Grid.Row="4"
                Click="NumBtn_Click"/>
        <Button Content="."
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        FontSize="30"
        Margin="5"
        Grid.Column="0"
        Grid.Row="5"
                Click="NumBtn_Click"/>
        <Button Content="0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        FontSize="30"
        Margin="5"
        Grid.Column="1"
        Grid.Row="5"
        Grid.ColumnSpan="2"
                Click="NumBtn_Click"/>
    </Grid>

</Window>
